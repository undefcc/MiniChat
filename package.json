{
  "name": "minichat",
  "version": "1.0.0",
  "description": "Video chat platform with microservices architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "start": "pnpm --parallel -r start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "docker:build": "docker build -t minichat-web:latest -f apps/web/Dockerfile . && docker build -t minichat-signaling:latest -f apps/signaling/Dockerfile . && docker build -t minichat-gateway:latest -f apps/gateway/Dockerfile .",
    "docker:build:web": "docker build -t minichat-web:latest -f apps/web/Dockerfile .",
    "docker:build:signaling": "docker build -t minichat-signaling:latest -f apps/signaling/Dockerfile .",
    "docker:build:gateway": "docker build -t minichat-gateway:latest -f apps/gateway/Dockerfile .",
    "docker:test": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps"
  },
  "keywords": [
    "video-chat",
    "webrtc",
    "nestjs",
    "nextjs",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "mqtt": "^5.15.0",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
